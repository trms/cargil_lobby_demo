{{outlet}}

{{ admin-header title='Slideshow Images' hasSearch=false }}

<div class="form-group">
	{{ input value=slideTitle class='form-control' placeholder="enter slide title" }}
</div>

<div class="form-group">
	{{ file-upload url="api/images/slide" model=newSlide newModel='save'}}
</div>

{{#each model as |slide|}}

{{#if slide.image}}
  
	<div class="col-xs-6 col-sm-4 col-md-3">
		<div class="thumbnail">
			<img src="{{ slide.image }}" alt="slide">
			<div class="caption">
				<p>{{ slide.title }}</p>
				{{ delete-button delete='delete' model=slide }}
			</div>
		</div>
	</div>
	
{{/if}}

{{/each}}